<div class="container">
  <h1>餐廳分類總表</h1>
  <div>
    <%=link_to "Restaurants", admin_restaurants_path%> |
    <%=link_to "Categories", admin_categories_path%>
  </div>
  <br>
  <div class="form-inline">
    <%= form_for [:admin , @category] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
      </div>
      <div class="form-group">
         <%= f.submit class: "btn btn-primary"%> 
      </div>
      <% if @category.errors.any? %>
        <%= @category.errors.full_messages.to_sentence %>
      <% end %>
    <% end %>
  </div>

  <br>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-bordered"> 
        <thead>
          <tr>
            <td>ID</td>
            <td>類別</td>
            <td>編輯</td>
            <td>刪除</td>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id%></td>
              <td><%= category.name%></td>
              <td><%= link_to "Edit", admin_categories_path(id: category.id) %></td>
              <td><%= link_to "Delete", admin_category_path(category) , method: :delete, data:{confirm: "Are you sure?"} %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>