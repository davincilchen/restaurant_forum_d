<div class="container">
  <div class='row'>
    <div class="col-md-6">
      <h1><%= @restaurant.name %></h1>
    </div>
    <div class="col-md-6">
      <div class="well">
        <ul class="list-unstyled"> <!-- left margin -->
          <strong>Opening Hours:</strong> <%= @restaurant.opening_hours %><br>
          <strong>Tel:</strong> <%= @restaurant.tel %> <br>
          <strong>Address:</strong> <%= @restaurant.address %> <br>
        </ul>
      </div>
    </div>
    <div>
    <div class="col-md-6">
      <%= image_tag @restaurant.image, width: '600px' %>
    </div>
    <div class="col-md-6">
      <br>
      <div class="well">
      <strong>Description:</strong> <%= @restaurant.description %> <br>
      </div>
    <div>
    </div>
  </div> <!-- row -->
  <div class="clearfix"></div>
    <br>
  </div>
  <div class="col-md-12">
    <%= link_to "back to inaex", admin_restaurants_path %>
  </div>
</div>


