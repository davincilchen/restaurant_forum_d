<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1>美食達人</h1>
      </div>
    </div>


    <% @users.each do |user|%>
      <div class="col-md-3 col-sm-4 col-xs-6 text-center user-item">
        <%= link_to user_path(user) do %>
          <!-- test: <img src="http://via.placeholder.com/128x128"> -->
          <%= image_tag user.avatar , class: "img-rounded" %>
          <h4><%= user.name %></h4>
        <% end %>
        <%= render partial: "shared/follow", locals: {user: user}%>
        <%= render partial: "shared/friend", locals: {user: user}%>
      </div>
    <% end %>
  </div>
</div>