<div class="restaurants clearfix">
  <% @restaurants.each do |restaurant| %>
    <div class="col-sm-6 col-md-4">
      <div class="restaurant-item">
        <div class="restaurant-image">
          <% if restaurant.image? %>
             <%= image_tag restaurant.image, class: "img-responsive center-block" %>
          <% else %>
             <span class="glyphicon glyphicon-picture"></span>
          <% end %>
        </div>
        <div class="caption">
          <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
          <p class="label label-default"><%= restaurant.category.name %><p>
          <p><%= truncate(restaurant.description, length: 100) %></p>
          <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<!-- æœ‰generate kaminari paginate bootstrap style -->
<div class="text-center">
  <%= paginate @restaurants %>
</div>